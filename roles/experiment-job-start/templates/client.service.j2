[Unit]
Description=Client Service

# TODO: define how to start the client service and with which arguments
#       the run config is available in the variable `exp_run_config` to pass as parameters
#       or in the working directory there is a file called `config.json` with the run config 

# Note: 
# - 'servers_ip' and 'clients_ip' are variables with a list of the ip addresses of the server and client hosts.

[Service]
Type=simple
WorkingDirectory={{ exp_working_dir }}
ExecStart=/bin/sh -c '{{ exp_code_dir }}/.venv/bin/python {{ exp_code_dir }}/demo/client.py -config config.json -a1 {{ exp_run_config.client.arg1 }} -a2 {{ exp_run_config.client.arg2 }}'
User=ubuntu

StandardOutput=file:{{ exp_working_dir }}/results/client_stdout.log
StandardError=file:{{ exp_working_dir }}/results/client_stderr.log

[Install]
WantedBy=multi-user.target